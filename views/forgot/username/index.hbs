<div class="row no-gutters work-area">
	<div class="col-lg-5 d-none d-lg-flex border-right py-5 all-center">
		<img src="https://cb-thumbnails.s3.ap-south-1.amazonaws.com/accounts-vector.svg" class="w-100">
	</div>
	<div class="col-lg-7 py-5 px-sm-5 px-4">
		<div class="tab-nav-underline w-100 justify-content-start">
			<a href="/forgot/username" class="tab active px-0 font-md extra-bold">Forgot Username</a>
		</div>

		<div class="my-4 pt-4">
			<div class="font-mds dark-grey">Enter Your Registered Email ID.</div>
		</div>

		<form action="/forgot/username" method="POST">
			<input type="hidden" name="_csrf" value="{{csrfToken}}">
			{{> error-snippet}}

			<input type="text" class="underline-input font-sm bold w-100 my-5" name="email" placeholder="abc@gmail.com"
				required />

			<button class="button-solid button-orange lg mt-4" type="submit">Submit</button>
		</form>
	</div>
</div>